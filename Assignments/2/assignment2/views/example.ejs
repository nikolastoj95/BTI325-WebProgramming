<!DOCTYPE html>
<html lang="en" data-theme="emerald">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%=d %> – Travel Journal</title>
  <link href="/css/main.css" rel="stylesheet"/>
</head>

<body class="min-h-screen bg-base-200">
  <!-- Navbar (optional) -->
  <div class="navbar bg-base-100 shadow">
    <div class="flex-1">
      <a class="btn btn-ghost text-xl">Travel Journal</a>
    </div>
    <div class="flex-none">
      <span class="badge badge-primary">DaisyUI + Tailwind</span>
    </div>
  </div>

  <!-- Hero with overlay -->
  <section class="hero min-h-[50vh]" style="background-image: url('https://images.unsplash.com/photo-1528164344705-47542687000d?q=80&w=1400');">
    <div class="hero-overlay bg-opacity-60"></div>
    <div class="hero-content text-center text-neutral-content">
      <div class="max-w-2xl">
        <h1 class="mb-4 text-5xl font-bold"><%=d %></h1>
        <p class="mb-6">
          A personal journal of memorable spots — food, nature, and culture — all within <%=d%>.
        </p>
        <div class="join">
          <button class="btn btn-primary join-item">Explore</button>
          <button class="btn btn-secondary join-item">Add (later)</button>
        </div>
      </div>
    </div>
  </section>





  
  <!-- Locations Table -->
  <main class="container mx-auto px-4 py-10">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">All Memorable Locations</h2>
        <div class="overflow-x-auto">
          <table class="table">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category</th>
                <th>Address</th>
                <th>Comments</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% l.forEach(loc => { %>
                <tr class="hover">
                  <td>
                    <div class="avatar">
                      <div class="mask mask-squircle w-16 h-16">
                        <img src="<%= loc.image %>" alt="<%= loc.name %>"/>
                      </div>
                    </div>
                  </td>

                  <td class="font-semibold"><%= loc.name %></td>
                  <td>
                    <span class="badge badge-info badge-outline"><%= loc.category %></span>
                  </td>
                  <td class="whitespace-pre-line"><%= loc.address %></td>
                  <td class="max-w-[28ch]"><%= loc.comments %></td>
                  <td class="text-right">
                    <form action="/locations/<%= loc.id %>/delete" method="POST" onsubmit="return confirm('Delete <%= loc.name %>?')">
                      <button class="btn btn-error btn-sm" >Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
              <% if (locations.length === 0) { %>
                <tr>
                  <td colspan="6" class="text-center text-base-content/60 py-10">No locations yet.</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="footer footer-center p-6 bg-base-100 text-base-content">
    <aside>
      <p>Built with Express · EJS · Tailwind · DaisyUI (theme: <span class="font-semibold">emerald</span>)</p>
    </aside>
  </footer>
</body>
</html>
